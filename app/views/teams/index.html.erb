<div class= "text-center">
<h1>Teams results</h1>

<p> <a href="teams/create"> Refresh data. Note: This will duplicate all of the current date </a> </p>
</div>
<div class="container">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Home team</th>
        <th>Away Team</th>
        <th>Score</th>
        <th> Date </th>
        <th> Get Odds </th>
      </tr>
    </thead>
    <tbody>
    	<%@results.each do |x|%>
      <tr>
        <td><%=x.team1%></td>
        <td><%=x.team2%></td>
        <%if x.team1_goal <0 %>
        	<td> TBD</td>
        <%else%> 
        	<td><%=x.team1_goal%> - <%=x.team2_goal%></td>
        <%end%>
        <td> <%=x.date%> <td>
        
        <%if x.game_id %>	
        	<td> <a href="/bets/<%=x.game_id%>"> Betable </a> </td>
        <%else%>
        	<td> N/A </td>
        <%end%>	
      </tr>
      <%end%>
    </tbody>
  </table>
</div>

</body>
</html>
