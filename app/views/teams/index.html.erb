<div class= "text-center">
<h1>Teams results</h1>

<form action="/teams" method="POST"> <button type="submit" class="btn btn-primary" > Refresh data </button>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

</form>
<a href="/teams/betable"> See only future games </a>
</div>

<div class="container">
<h2>Betting Practice</h2>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th> Bet </th>
        <th>Home team</th>
        <th> Away Team </th>
        <th> Home Line </th>
        <th>Away Line</th>
        <th> Draw Line </th>
        <th>Score</th>
        <th> Date </th>
        
      </tr>
    </thead>
    <tbody>
      <%@practice.each do |x|%>
      <tr>
          <td> <button class="btn"> <a href="/practice/<%=x.id%>"> Make Practice Bet </a> </button> </td>
         <td><a href="#"><%=x.team1%></a> </td>
        <td><a href="#"><%=x.team2%></a></td>
        <td> <%=x.home_line%> </td>
        <td> <%=x.away_line%> </td>
        <td> <%=x.draw_line%> </td>
        <td>??? - ???</td>
        <td> <a href='match/<%= x.id %>'><%=x.date%></a> </td>
        
        
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
<h2>Matches</h2>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th> Bet </th>
        <th>Home team</th>
        <th> Away Team </th>
        <th> Home Line </th>
        <th>Away Line</th>
        <th> Draw Line </th>
        <th>Score</th>
        <th> Date </th>
        
      </tr>
    </thead>
    <tbody>
    	<%@results.each do |x|%>
        <tr>
          <%if x.game_id %> 
            <% if x.date > @date %>
            <td> <button class="btn"> <a href="/bets/<%=x.id%>"> Make Bet </a> </button> </td>
            <%else%>
            <td> <a href="/bets/<%=x.id%>"> Practice </a> </td>
            <%end%>
          <%else%>
            <td> N/A </td>
          <%end%> 
           <td> <a href="/teams/<%=x.team1%>"> <%=x.team1%>  </td>
          <td> <a href="/teams/<%=x.team2%>"><%=x.team2%></td>
          <td> <%=x.home_line%> </td>
          <td> <%=x.away_line%> </td>
          <td> <%=x.draw_line%> </td>
          <%if x.team1_goal <0 %>
          	<td> TBD</td>
          <%else%> 
          	<td><%=x.team1_goal%> - <%=x.team2_goal%></td>
          <%end%>
          <td> <a href='match/<%= x.id %>'><%=x.date%> </a></td>
        </tr>
      <%end%>
    </tbody>
  </table>
</div>