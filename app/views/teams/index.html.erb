<div class= "text-center">
<h1>Teams results</h1>
</div>
	
<div class="container">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Home team</th>
        <th>Away Team</th>
        <th>Score</th>
        <th> Date </th>
      </tr>
    </thead>
    <tbody>
    	<%@results.each do |x|%>
      <tr>
        <td><%=x.team1%></td>
        <td><%=x.team2%></td>
        <td><%=x.team1_goal%> - <%=x.team2_goal%></td>
        <td> <%=x.date%> <td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>

</body>
</html>
