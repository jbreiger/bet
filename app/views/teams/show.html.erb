<div class= "text-center">
	<h1> <%=@team["team"]%> Recent Form </h1>
	<h3> <%=@team["team"]%> are currently number <%=@team["position"]%> in the table </h3>
</div>


<table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Record</th>
        <th>Matches Played</th>
        <th> Goal Difference </th>
      </tr>
    </thead>
    <tbody>
    	
      <tr>
      	<td> <%=@team["overall"]["wins"]%> - <%=@team["overall"]["draws"]%> - <%=@team["overall"]["losts"]%> </td>
      	<td> <%=@team["overall"]["matches_played"]%>
      	<td> <%=@team["overall"]["goal_difference"]%> </td>
     </tr>
</table>        	
