<div class= "text-center">
<% if false %>
<%= image_tag("deadpool.jpg") %>
<%end%>
<h4>Welcome <%=@user.name%>! You have $<%=@user.money%>0 </h4>
</div>


<div class="text-center">
  <h3> Your Bets </h3>
  <br>
</div>
<div class="container">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th> Cashout </th>
      	<th> Result </th>
        <th> Your Pick </th>
        <th> Bet </th>
        <th>Home team</th>
        <th> Away Team </th>
        <th> Home Line </th>
        <th>Away Line</th>
        <th> Draw Line </th> 
        <th> Date  of match</th>  
        <th> Date of bet </th>  
      </tr>
    </thead>
    <tbody>
    <tr>	
    	<% @user_bets.each do |x| %>
      <td> <a href="user_bet/cashout/<%=x.id%>" class="btn btn-info" role="button"> Cashout! </a> </d>
      	<% if x.bet.team1_goal > 0 %>
      	<td> <%=x.bet.team1_goal%> - <%=x.bet.team2_goal%> </td> 
      	<%else%>
      	<td> TBD </td>
      	<%end%>
      <td> <%=x.winner%> </td>
      <td> $<%=x.amount%>0 </td>
      <td> <%=x.bet.team1%> </td>
      <td> <%=x.bet.team2%> </td>
      <td> <%=x.bet.home_line%> </td>
      <td> <%=x.bet.away_line%> </td>
      <td> <%=x.bet.draw_line%> </td>
      <td> <%=x.bet.date%> </td>
      <td> <%=x.bet.created_at.to_date%> </td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>